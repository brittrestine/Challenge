<div class="container">
  <h1 class="home-contact">Contacts</h1>
    <h2 class="fav-other-contacts">FAVORITE CONTACTS</h2>
      <%  @favorite_contacts.each do |contact| %>
        <div class="contact">
          <div class="contact-small-photo">
            <% if contact.small_image.present? %>
              <img src=<%= contact.small_image %> class="small-image" alt="Contact Image">
            <% else %>
              <img src=/images/User-Small/User-Icon-Small.png class="small-image" alt="No Contact Image">
            <% end %>
            <div class="contact-info">
              <p><i class="em em-star"></i>
              <a href="/contact/<%= contact.id %>" class="contact-name"><%= contact.name %></a></p>
              <p><%= contact.company %></p>
            </div>
          </div>
        </div>
      <% end %>
      <h2 class="fav-other-contacts">OTHER CONTACTS</h2>
        <% @other_contacts.each do |contact| %>
          <div class="contact">
            <div class="contact-small-photo">
            <% if contact.small_image.present? %>
              <img src=<%= contact.small_image %> class="small-image" alt="Contact Image">
            <% else %>
              <img src=/images/User-Small/User-Icon-Small.png class="small-image" alt="No Contact Image">
            <% end %>
              <div class="contact-info">
                <p><a href="/contact/<%= contact.id %>" class="contact-name"><%= contact.name %></a></p>
                <p><%= contact.company %></p>
              </div>
            </div>
          </div>
        <% end %>
</div>
