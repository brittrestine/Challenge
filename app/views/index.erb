<div class="container">
  <h1 class="home-contact">Contacts</h1>

    <h2 class="fav-other-contacts">FAVORITE CONTACTS</h2>
<!-- need to refactor this code... not dry make a helper method. also style a little more -->
      <% @contacts.each do |contact| %>
        <% if contact["isFavorite"] %>
          <div class="contact">
            <div class="contact-small-photo">
              <img src=<%= contact['smallImageURL'] %> alt="Mountain View">
              <%= contact['isFavorite'] %>
            </div>
            <div class="contact-info">
              <img src="/images/Favorite-Star/Favorite-true1.png" alt="star">
              <h3><a href="/contact/<%= contact['id'] %>"><%= contact['name'] %></a></h3>
              <% if !(contact['companyName'] == '') || !(contact['companyName'] == nil)%>
                <p><%= contact['companyName'] %></p>
              <% end %>
            </div>
            <br>
            <br>
          </div>
        <% end %>
      <% end %>

    <h2 class="fav-other-contacts">OTHER CONTACTS</h2>

      <% @contacts.each do |contact| %>
        <% if contact["isFavorite"] == false %>
          <div class="contact">
            <div class="contact-small-photo">
            <!-- Winnie the poo only has a large image even though it is labeled as small -->
              <% if (contact['name'] == 'Scooby Doo') || (contact['name'] == 'Winnie-the-Pooh') %>nb
              <img src=/images/User-Small/User-Icon-Small.png alt="No Contact Image">
              <% else %>
              <img src=<%= contact['smallImageURL'] %> alt="Mountain View">
              <% end %>
              <%= contact['isFavorite'] %>
            </div>
            <div class="contact-info">
              <h3><a href="/contact/<%= contact['id'] %>"><%= contact['name'] %></a></h3>
              <% if !(contact['companyName'] == '') || !(contact['companyName'] == nil)%>
                <p><%= contact['companyName'] %></p>
              <% end %>
            </div>
            <br>
            <br>
          </div>
        <% end %>
      <% end %>
</div>
